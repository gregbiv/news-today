<android.support.v7.widget.CardView
    android:id="@+id/article_item_container"
    style="@style/NewsItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/item_spacing_half"
    android:layout_marginTop="@dimen/item_spacing_half"
    tools:layout_margin="@dimen/item_spacing_full">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/article_item_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_background"
            android:gravity="top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:id="@+id/article_item_image"
                tools:src="@drawable/placeholder_article_item_image" />

            <LinearLayout
                android:id="@+id/article_item_content"
                android:layout_width="0dp"
                android:layout_height="94dp"
                android:layout_marginBottom="@dimen/keyline_1_minus_8dp"
                android:layout_marginLeft="@dimen/keyline_1_minus_8dp"
                android:layout_marginStart="@dimen/keyline_1_minus_8dp"
                android:layout_marginTop="@dimen/keyline_1_minus_8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/NewsItemTitle"
                    android:id="@+id/article_item_title"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/body_text_2"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque posuere velit sed posuere tempor." />

                <TextView
                    style="@style/NewsItemText"
                    android:layout_marginTop="@dimen/keyline_1_minus_8dp"
                    android:id="@+id/article_item_description"
                    android:textColor="@color/list_dropdown_foreground_normal"
                    android:textSize="@dimen/text_size_small"
                    tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque posuere velit sed posuere tempor. Duis hendrerit, risus et suscipit hendrerit, turpis nibh feugiat odio, sit amet interdum ligula elit a massa. Curabitur nec sem nec urna eleifend porttitor. Nulla at justo id lorem feugiat mattis sit amet sed lorem. Etiam sed est odio. Vivamus id scelerisque massa. Vivamus vitae massa et libero hendrerit sodales sed sed ante. Maecenas metus augue, rutrum at sagittis sed, gravida sed orci. Vestibulum quis massa lorem."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/article_item_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_background"
            android:gravity="top"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/article_footer_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/keyline_1_minus_8dp"
                android:layout_marginLeft="@dimen/keyline_1_minus_8dp"
                android:layout_marginStart="@dimen/keyline_1_minus_8dp"
                android:layout_marginTop="@dimen/keyline_1_minus_8dp"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                style="@style/NewsItemText"
                android:id="@+id/article_item_feed"
                android:textColor="@color/list_dropdown_foreground_normal"
                android:textSize="@dimen/text_size_small"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>