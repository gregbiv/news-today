<com.github.ksoichiro.android.observablescrollview.ObservableScrollView
    android:id="@+id/news_scroll_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/news_details_margin"
    android:layout_marginRight="@dimen/news_details_margin"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false">

        <FrameLayout
            android:id="@+id/news_illustration_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/news_details_margin"
            android:clickable="true"
            android:foreground="?photoItemForeground">

            <com.github.gregbiv.news.ui.widget.AspectLockedImageView
                android:id="@+id/news_illustration"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                app:imageAspectRatio="@dimen/news_details_illustration_aspect_ratio"
                tools:src="@drawable/placeholder_news_details_image" />
        </FrameLayout>

        <View
            android:id="@+id/anchor"
            style="@style/NewsDetailAnchor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/news_details_anchor_height" />

        <!-- Details -->
        <LinearLayout
            android:layout_width="@dimen/news_details_responsive_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/anchor"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/news_details_content_margin_bottom"
            android:background="@android:color/white"
            android:clickable="true"
            android:clipChildren="false"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/keyline_1">

                    <TextView
                        android:id="@+id/news_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/body_text_1"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit." />

                    <TextView
                        android:id="@+id/news_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/body_text_2"
                        android:textSize="@dimen/text_size_medium"
                        tools:text="February 2013" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/list_dropdown_divider_color" />

            <TextView
                android:id="@+id/news_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/keyline_1"
                android:textSize="@dimen/text_size_medium"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque posuere velit sed posuere tempor. Duis hendrerit, risus et suscipit hendrerit, turpis nibh feugiat odio, sit amet interdum ligula elit a massa. Curabitur nec sem nec urna eleifend porttitor. Nulla at justo id lorem feugiat mattis sit amet sed lorem. Etiam sed est odio. Vivamus id scelerisque massa. Vivamus vitae massa et libero hendrerit sodales sed sed ante. Maecenas metus augue, rutrum at sagittis sed, gravida sed orci. Vestibulum quis massa lorem." />

        </LinearLayout>

    </RelativeLayout>

</com.github.ksoichiro.android.observablescrollview.ObservableScrollView>
